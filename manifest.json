{
  "name": "Oracle Button",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Oracle Button with TOHOKU KIRITAN",
  "icons": {
    "16": "icons/ora16.png",
    "48": "icons/ora48.png",
    "128": "icons/ora128.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["ora_button.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/ora48.png",
    "default_popup": "views/popup.html"
  },
  "web_accessible_resources": ["icons/*.png", "sounds/*.wav"],
  "permissions": [
    "tabs"
  ]
}
